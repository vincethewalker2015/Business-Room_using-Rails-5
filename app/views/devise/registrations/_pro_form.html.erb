  <div class="well welcome">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'pro_form'}) do |f| %>
    <%= devise_error_messages! %>
    
    <%= hidden_field_tag 'plan', params[:plan] %>
  
  <div class="field">
    <%= f.label :email, class: "label-text" %><br />
    <%= f.email_field :email, class: 'form-control', placeholder: "Enter your email address", autofocus: true %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :password, class: "label-text" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control', placeholder: "Enter Password", autocomplete: "off" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :password_confirmation, class: "label-text" %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Re Enter password", autocomplete: "off" %>
  </div>
  <br />
  <div class="field form-group">
    <%= label_tag :card_number, "Credit Card Number", class: "label-text" %>
    <%= text_field_tag :card_number, nil, name: nil, class: "form-control", placeholder: "Credit Card number.." %>
  </div>
  <div class="field form-group">
    <%= label_tag :card_code, "Security Code on Card (CVV)", class: "label-text" %>
    <%= text_field_tag :card_code, nil, name: nil, class: "form-control", placeholder: "3 digit security code" %>
  </div>
  <div class="form-group">
    <%= label_tag :card_month, "Card Expiration", class: "label-text" %><br />
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month" } %>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year" } %>
  </div>
  
  
  
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default copper", id: 'form-signup-btn' %> or <%= render "devise/shared/links" %>
  </div>
    <% end %>
  
  </div>